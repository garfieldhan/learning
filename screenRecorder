import pyautogui
import pyaudio
import wave
import time
import os
import subprocess
from moviepy.editor import *

# Set up the screen recording parameters
SCREEN_SIZE = pyautogui.size()
FPS = 30
VIDEO_NAME = "output.mp4"

# Create a PyAudio object
p = pyaudio.PyAudio()

# Get the number of audio devices
num_devices = p.get_device_count()

# Set up the list of devices to record from
devices = range(num_devices)

# Determine the number of channels supported by each device
channels_list = []
for device in devices:
    device_info = p.get_device_info_by_index(device)
    num_channels = device_info["maxInputChannels"]
    channels_list.append(num_channels)

# Set the number of channels to the minimum supported by all devices
CHANNELS = min(channels_list)

# Set up the audio recording parameters
CHUNK = 1024
FORMAT = pyaudio.paInt16
RATE = 44100
RECORD_SECONDS = 10

# Set up the audio streams for each device
streams = []
for device in devices:
    stream = p.open(format=FORMAT,
                    channels=CHANNELS,
                    rate=RATE,
                    input=True,
                    input_device_index=device,
                    frames_per_buffer=CHUNK)
    streams.append(stream)

# Create a WAV file to save the recorded audio
AUDIO_NAME = "output.wav"
wf = wave.open(AUDIO_NAME, "wb")
wf.setnchannels(CHANNELS)
wf.setsampwidth(p.get_sample_size(FORMAT))
wf.setframerate(RATE)

# Start recording audio
print("Recording audio...")
frames = []
for i in range(0, int(RATE / CHUNK * RECORD_SECONDS)):
    # Read audio data from each stream
    data = [stream.read(CHUNK) for stream in streams]

    # Combine the audio data into a single frame
    frame = b"".join(data)

    # Write the frame to the WAV file
    wf.writeframes(frame)

# Stop recording audio
for stream in streams:
    stream.stop_stream()
    stream.close()
p.terminate()
wf.close()
print("Finished recording audio.")

# Start recording screen
print("Recording screen...")
fourcc = cv2.VideoWriter_fourcc(*"mp4v")
video_writer = cv2.VideoWriter(VIDEO_NAME, fourcc, FPS, SCREEN_SIZE)

start_time = time.time()
while (time.time() - start_time) < RECORD_SECONDS:
    img = pyautogui.screenshot()
    frame = np.array(img)
    frame = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
    video_writer.write(frame)

# Stop recording screen
video_writer.release()
print("Finished recording screen.")

# Combine the recorded video and audio into a single file
video = VideoFileClip(VIDEO_NAME)
audio = AudioFileClip(AUDIO_NAME)
final_clip = video.set_audio(audio)
final_clip.write_videofile("output_final.mp4")

# Delete the temporary files
os.remove(VIDEO_NAME)
os.remove(AUDIO_NAME)

print("Finished.")
